{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build SourDo",
            "command": "vendor/premake/bin/MacOS/premake5 gmake2 && make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Test SourDo",
            "command": "vendor/premake/bin/MacOS/premake5 gmake2 && make && ./bin/macosx/Debug-x86_64/SourDo/SourDo ",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ]
}