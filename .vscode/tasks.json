{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Project",
            "command": "./vendor/premake/bin/premake5 gmake2 && make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run Executable",
            "command": "bin/macosx/Debug-x86_64/SourDo/SourDo",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build Project"
            ]
        }
    ]
}